include ../includes/mixins 
doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="description" content="Краткое описание документа")
		meta(name="keywords" content="keywords-ключевые слова для поиска")
		//- meta(http-equiv="Content-Security-Policy", content="default-src \'self\' \'unsafe-inline\'")
		block link
			link(rel="icon" type="image/icon" href="@@webRoot/img/icons/icon-logo.ico") 
		block script
			script(defer="defer" type="text/javascript" src="@@webRoot/js/main.min.js") 
		//- prepend script 
			
		block title
		- var text
			title #{text}

	body
		include ../modules/preloader
		include ../includes/mixins
		div(class="wrapper")
			block page-content 
				block main-content
		block notfound
			script.
				window.onload = function () {
					var segmentCount = 0;
					var l = window.location;
					l.replace(
						l.protocol + '//' + l.hostname + (l.port ? ':' + l.port : '') +
						l.pathname.split('/').slice(0, 1 + segmentCount).join('/') + '/?p=/' +
						l.pathname.slice(1).split('/').slice(segmentCount).join('/').replace(/&/g, '~and~') +
						(l.search ? '&q=' + l.search.slice(1).replace(/&/g, '~and~') : '') +
						l.hash
					);
				};
